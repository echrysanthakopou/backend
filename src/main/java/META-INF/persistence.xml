<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>gr.beekeepingApp.model.entities.ApiariesEntity</class>
        <class>gr.beekeepingApp.model.entities.BeehivesEntity</class>
        <class>gr.beekeepingApp.model.entities.DiseaseEntity</class>
        <class>gr.beekeepingApp.model.entities.EventEntity</class>
        <class>gr.beekeepingApp.model.entities.FeedingEntity</class>
        <class>gr.beekeepingApp.model.entities.FinancialEntity</class>
        <class>gr.beekeepingApp.model.entities.FinancialcategoriesEntity</class>
        <class>gr.beekeepingApp.model.entities.HarvestEntity</class>
        <class>gr.beekeepingApp.model.entities.InspectionsEntity</class>
        <class>gr.beekeepingApp.model.entities.MeasumentsEntity</class>
        <class>gr.beekeepingApp.model.entities.QueenEntity</class>
        <class>gr.beekeepingApp.model.entities.TasksEntity</class>
        <class>gr.beekeepingApp.model.entities.TreatmentappliedEntity</class>
        <class>gr.beekeepingApp.model.entities.TreatmentsEntity</class>
        <class>gr.beekeepingApp.model.entities.UsersEntity</class>
        <class>gr.beekeepingApp.model.entities.WeatherEntity</class>
        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3308"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value=""/>
            <property name="hibernate.archive.autodetection" value="class"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>
